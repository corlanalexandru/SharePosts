    <div class="container" style="min-height: auto!important;">
        <form id="AddNewPostForm">
            <div class="mandatory alert alert-danger" id="mandatory_post_general_errors" role="alert"></div>
            <input type="text" placeholder="Enter post title" name="title" id="post_title" required>
            <div class="mandatory alert alert-danger" id="mandatory_post_title" role="alert"></div>
            <textarea class="form-control mb-2" rows="3" placeholder="What are you doing today?" name="content" id="post_content" required></textarea>
            <div class="mandatory alert alert-danger" id="mandatory_post_content" role="alert"></div>
            <button type="submit" class="registerbtn">Publish</button>
        </form>
    </div>
