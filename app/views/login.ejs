<%- include('partials/_header'); -%>
<%- include('partials/_jumbotron'); -%>
<div class="container">
    <form id="LoginForm">
        <div class="container">
            <h1>Login</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <div class="mandatory alert alert-danger" id="mandatory_login_general_errors" role="alert"></div>
            <label for="username"><b>Username</b></label>
            <input type="email" placeholder="Enter Username" name="username" id="login_username" required>
            <div class="mandatory alert alert-danger" id="mandatory_login_username" role="alert"></div>
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" id="login_password" required>
            <div class="mandatory alert alert-danger" id="mandatory_login_password" role="alert"></div>
            <hr>
            <div class="alert alert-success mandatory-success" role="alert" id="mandatory_login_success">
                Hello there, welcome
            </div>
            <button type="submit" class="registerbtn">Login</button>
        </div>
        <div class="signin">
            <p>You haven't an account? <a href="/register">Register</a>.</p>
        </div>
    </form>
</div>
<%- include('partials/_footer'); -%>
