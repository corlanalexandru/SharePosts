<%- include('partials/_header'); -%>
<%- include('partials/_jumbotron'); -%>
<div class="container">
    <form id="RegisterForm">
        <div class="container">
            <h1>Register</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <div class="mandatory alert alert-danger" id="mandatory_register_general_errors" role="alert"></div>
            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" name="name" id="register_name" required>
            <div class="mandatory alert alert-danger" id="mandatory_register_name" role="alert"></div>
            <label for="username"><b>Username</b></label>
            <input type="email" placeholder="Enter Username" name="username" id="register_username" required>
            <div class="mandatory alert alert-danger" id="mandatory_register_username" role="alert"></div>
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" id="register_password" required>
            <div class="mandatory alert alert-danger" id="mandatory_register_password" role="alert"></div>
            <label for="repeat_password"><b>Repeat password</b></label>
            <input type="password" placeholder="Repeat password" name="repeat_password" id="register_repeat_password" required>
            <div class="mandatory alert alert-danger" id="mandatory_register_repeat_password" role="alert"></div>
            <div class="mandatory alert alert-danger" id="mandatory_register_repeat_password" role="alert"></div>
            <button type="submit" class="registerbtn">Register</button>
        </div>

        <div class="signin">
            <p>Already have an account? <a href="login">Sign in</a>.</p>
        </div>
    </form>
</div>
<%- include('partials/_footer'); -%>
